{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "rootDir": "./src",  
      "outDir": "./dist",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "types": [
        "node",
        "webpack-env" 
      ]
    },
    "include": ["src","index.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  }